<Page x:Class="Леарн.PageAvt"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Леарн"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAvt">

    <Grid>
        <StackPanel>
            <Button Content="Войти с ролью администратор" Click="AvtAdmin_Click"></Button>
            <Button Content="Войти с ролью клиент" Click="OnUser_Click"></Button>
            <StackPanel x:Name="login" Visibility="Hidden">
                <TextBox x:Name="cod"></TextBox>
                <Button Content="Подтвердить вход" Click="OnAdmin_Click"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
